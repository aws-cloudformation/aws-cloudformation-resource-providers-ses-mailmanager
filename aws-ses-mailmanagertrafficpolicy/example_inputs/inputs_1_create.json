{
    "FilterStatements": [
        {
            "Conditions": [
                {
                    "StringExpression": {
                        "Evaluate": {
                            "Attribute": "RECIPIENT"
                        },
                        "Operator": "ENDS_WITH",
                        "Value": [
                            "@gmail.com"
                        ]
                    }
                },
                {
                    "StringExpression": {
                        "Evaluate": {
                            "Attribute": "RECIPIENT"
                        },
                        "Operator": "CONTAINS",
                        "Value": [
                            "anyone"
                        ]
                    }
                }
            ],
            "Action": "ALLOW"
        },
        {
            "Conditions": [
                {
                    "TlsExpression": {
                        "Evaluate": {
                            "Attribute": "TLS_PROTOCOL"
                        },
                        "Operator": "MINIMUM_TLS_VERSION",
                        "Value": "TLS1_3"
                    }
                }
            ],
            "Action": "ALLOW"
        },
        {
            "Conditions": [
                {
                    "StringExpression": {
                        "Evaluate": {
                            "Attribute": "RECIPIENT"
                        },
                        "Operator": "CONTAINS",
                        "Value": [
                            "@trashmaker.com"
                        ]
                    }
                }
            ],
            "Action": "DENY"
        },
        {
            "Conditions": [
                {
                    "IpExpression": {
                        "Evaluate": {
                            "Attribute": "SENDER_IP"
                        },
                        "Operator": "CIDR_NOT_IN",
                        "Value": [
                            "127.0.0.0/16"
                        ]
                    }
                }
            ],
            "Action": "DENY"
        }
    ],
    "DefaultAction": "ALLOW",
    "MaxMessageSizeBytes": 1000
}
